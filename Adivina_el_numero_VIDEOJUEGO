import random

def run():
    numero_aleatorio = random.randint(0, 2999)
    numero_elegido = int(input('Elige un numero del 0 al 2999: '))
    while numero_elegido != numero_aleatorio:
        if numero_elegido < numero_aleatorio:
            print('Escribe un numero mas grande')
        else:
            print('Escribe un numero mas peque;o')
        numero_elegido = int(input('Elije otro numerin: '))
    print('Eeehhh !GANASTE! :D ')

if __name__ == '__main__':
    run()